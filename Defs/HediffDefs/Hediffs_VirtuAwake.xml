<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef>
    <defName>VA_Lucidity</defName>
    <label>heightened awareness</label>
    <description>Awareness of the simulation bleeding through. Higher values bring clarity and the risk of realisation.</description>
    <hediffClass>VirtuAwake.Hediff_Lucidity</hediffClass>
    <tendable>false</tendable>
    <isBad>false</isBad>
    <initialSeverity>0</initialSeverity>
    <maxSeverity>1</maxSeverity>
  </HediffDef>
  <HediffDef>
    <defName>VA_Instability</defName>
    <label>perceptual instability</label>
    <description>Flickers, glitches, and sensory warping inside the simulation. Grows with long immersion and stress.</description>
    <hediffClass>VirtuAwake.Hediff_Instability</hediffClass>
    <tendable>false</tendable>
    <isBad>true</isBad>
    <initialSeverity>0</initialSeverity>
    <maxSeverity>1</maxSeverity>
    <stages>
      <li>
        <label>calm flicker</label>
        <minSeverity>0</minSeverity>
        <painFactor>1.0</painFactor>
        <capMods/>
      </li>
      <li>
        <label>pattern seen</label>
        <minSeverity>0.25</minSeverity>
        <painFactor>1.0</painFactor>
        <statOffsets>
          <GlobalLearningFactor>0.02</GlobalLearningFactor>
        </statOffsets>
        <capMods/>
      </li>
      <li>
        <label>deep fracture</label>
        <minSeverity>0.55</minSeverity>
        <painFactor>1.05</painFactor>
        <statOffsets>
          <GlobalLearningFactor>-0.05</GlobalLearningFactor>
          <PsychicSensitivity>0.05</PsychicSensitivity>
        </statOffsets>
        <statFactors>
          <MoveSpeed>0.98</MoveSpeed>
        </statFactors>
      </li>
      <li>
        <label>collapse warning</label>
        <minSeverity>0.8</minSeverity>
        <painFactor>1.08</painFactor>
        <statOffsets>
          <GlobalLearningFactor>-0.1</GlobalLearningFactor>
          <PsychicSensitivity>0.1</PsychicSensitivity>
        </statOffsets>
        <statFactors>
          <MoveSpeed>0.95</MoveSpeed>
        </statFactors>
      </li>
    </stages>
  </HediffDef>
</Defs>
