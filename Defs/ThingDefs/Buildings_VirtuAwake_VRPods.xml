<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>VA_VRPod_Basic</defName>
    <label>VR pod</label>
    <description>A reclining pod for quiet, dreamlike immersion. Pawns slip inside to drift through soft simulations.</description>
    <thingClass>VirtuAwake.Building_VRPod</thingClass>
    <graphicData>
      <texPath>Things/Building/VA_VRPod_Basic</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,1)</drawSize>
    </graphicData>
    <tickerType>Normal</tickerType>
    <passability>Standable</passability>
    <fillPercent>0</fillPercent>
    <size>(2,1)</size>
    <altitudeLayer>Building</altitudeLayer>
    <designationCategory>Misc</designationCategory>
    <costList>
      <Steel>120</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <statBases>
      <WorkToBuild>1500</WorkToBuild>
      <MaxHitPoints>250</MaxHitPoints>
      <Flammability>0.5</Flammability>
      <Beauty>1</Beauty>
    </statBases>
    <comps>
      <li Class="VirtuAwake.CompProperties_VRPod">
        <tickInterval>250</tickInterval>
        <simType>VA_Sim_Recreation</simType>
      </li>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>0</basePowerConsumption>
        <transmitsPower>true</transmitsPower>
        <shortCircuitInRain>false</shortCircuitInRain>
      </li>
    </comps>
  </ThingDef>

</Defs>
