<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThoughtDef>
    <defName>VA_VRGlitch_Negative</defName>
    <label>simulation glitch</label>
    <description>A flicker cut through the sim, pulling at the seams of memory.</description>
    <thoughtClass>Thought_Memory</thoughtClass>
    <durationDays>0.7</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>unsettling glitch</label>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>VA_VRGlitch_NegativeMajor</defName>
    <label>fracturing glitch</label>
    <description>The sim tore open with jagged echoes and pulled at everything familiar.</description>
    <thoughtClass>Thought_Memory</thoughtClass>
    <durationDays>1.2</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>frightening glitch</label>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>VA_VRGlitch_Positive</defName>
    <label>warming glitch</label>
    <description>A soft break in the sim felt like a secret doorway, oddly comforting.</description>
    <thoughtClass>Thought_Memory</thoughtClass>
    <durationDays>0.7</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>warming glitch</label>
        <baseMoodEffect>4</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>VA_VRGlitch_Neutral</defName>
    <label>clinical glitch</label>
    <description>Glitches appeared, catalogued, then filed away without feeling.</description>
    <thoughtClass>Thought_Memory</thoughtClass>
    <durationDays>0.7</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>clinical glitch</label>
        <baseMoodEffect>0</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
</Defs>
