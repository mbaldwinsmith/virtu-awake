<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <MentalStateDef ParentName="BaseMentalState">
    <defName>VA_PanicAwakening</defName>
    <label>simulation panic</label>
    <description>The seams split open and nothing felt real. Fight-or-flight triggered inside the headset.</description>
    <!-- Compatibility: explicit state/worker classes are provided so these mental states can be referenced
         directly by name in code and other defs. These classes are implemented in Source/MentalStates/*.cs
         to avoid missing-type load errors on vanilla and modded RimWorld builds. -->
    <stateClass>MentalState_PanicFlee</stateClass>
    <workerClass>MentalStateWorker_PanicFlee</workerClass>
    <category>Aggro</category>
    <blockRandomInteraction>true</blockRandomInteraction>
    <minTicksBeforeRecovery>6000</minTicksBeforeRecovery>
    <maxTicksBeforeRecovery>12000</maxTicksBeforeRecovery>
    <recoveryMtbDays>0.06</recoveryMtbDays>
    <beginLetter>{0} is panicking inside a broken simulation.</beginLetter>
    <beginLetterDef>ThreatSmall</beginLetterDef>
    <recoveryMessage>{0} steadied themselves after the panic.</recoveryMessage>
    <baseInspectLine>Mental state: Simulation panic</baseInspectLine>
    <recoverFromSleep>true</recoverFromSleep>
    <inCaravanCanDo>true</inCaravanCanDo>
  </MentalStateDef>

  <MentalStateDef ParentName="BaseMentalState">
    <defName>VA_Derealisation</defName>
    <label>derealisation walk</label>
    <description>The world repeats like a cheap loop. The pawn wanders, trying to find a corner that isn't duplicated.</description>
    <!-- Compatibility: explicit SadWander classes added in Source/MentalStates so the def can reference them. -->
    <stateClass>MentalState_SadWander</stateClass>
    <workerClass>MentalStateWorker_SadWander</workerClass>
    <category>Misc</category>
    <blockRandomInteraction>true</blockRandomInteraction>
    <minTicksBeforeRecovery>8000</minTicksBeforeRecovery>
    <maxTicksBeforeRecovery>16000</maxTicksBeforeRecovery>
    <recoveryMtbDays>0.08</recoveryMtbDays>
    <beginLetter>{0} is drifting through a derealised simulation.</beginLetter>
    <beginLetterDef>NegativeEvent</beginLetterDef>
    <recoveryMessage>{0} grounded themselves; the world feels solid again.</recoveryMessage>
    <baseInspectLine>Mental state: Derealisation</baseInspectLine>
    <recoverFromSleep>true</recoverFromSleep>
    <inCaravanCanDo>true</inCaravanCanDo>
  </MentalStateDef>
</Defs>
